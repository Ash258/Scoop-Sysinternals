    "hash": "9dd29a3342169680cbdb3cfb201e926295efed247fe7084c2c0d2899c8eb3ac1",
    "pre_install": [
        "$sysint = 'HKCU:\\Software\\Sysinternals'",
        "$fin = \"$sysint\\ZoomIt\"",
        "if (-not (Test-Path $sysint)) { New-Item $sysint -Force | Out-Null }",
        "if (-not (Test-Path $fin)) { New-Item $fin -Force | Out-Null }",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type DWord -Force | Out-Null"
    ],
    "shortcuts": [
        [
            "ZoomIt.exe",
            "SysInternals\\ZoomIt"
        ]
    ],
    "checkver": "ZoomIt\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/ZoomIt.zip"
    }
}
